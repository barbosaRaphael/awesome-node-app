<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <header class="header hero">
      <div class="logo-box">
        <a class="logo" href="/">COFFE<br/>PERK</a>
      </div>
      <div class="hero-img-wrapper">
        <img class="hero-img" src="<%= hero %>" alt="coffe">
      </div>
    </header>
    <main class="content">
      <div class="articles">
        <% if (articles.length > 0){ %> <% articles.forEach((article) =>{%>
        <div class="article">
          <a class="ar-link" href="/article/<%= article.id %>">
            <h3 class ar-title><%= article.title %></h3>
            <p class ar-title><%= article.snippet %></p>
          </a>
        </div>
        <% }) %> <%} else {%>
        <p>No articles available.</p>

        <% } %>
      </div>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
